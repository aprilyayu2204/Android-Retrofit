<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rL_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/pic_toko"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="fitXY"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/notif_operasional"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/pic_toko"
                android:background="@color/colorPrimaryDark"
                android:gravity="left"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                tools:ignore="RtlHardcoded,SmallSp" />

            <TextView
                android:id="@+id/nama_toko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/pic_toko"
                android:layout_alignEnd="@id/pic_toko"
                android:layout_alignLeft="@id/pic_toko"
                android:layout_alignRight="@id/pic_toko"
                android:layout_alignStart="@id/pic_toko"
                android:layout_marginTop="158dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="bottom"
                android:padding="8dp"
                android:textColor="@color/colorWhite"
                android:textSize="23sp"
                android:textStyle="bold"
                tools:ignore="RtlHardcoded" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/nama_toko"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/alamat_toko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:minLines="1"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:textColor="@color/colorWhite"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />

                <TextView
                    android:id="@+id/jarak_toko"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/colorWhite"
                    android:visibility="gone"
                    tools:ignore="RtlHardcoded,RtlSymmetry" />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

</android.support.v7.widget.CardView>
